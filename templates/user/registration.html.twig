{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}

    <form method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" class="form-control" required maxlength="255">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" class="form-control" required maxlength="255">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control" required maxlength="255">
        </div>
        <div class="form-group">
            <label for="c_password">Confirm password</label>
            <input type="password" name="confirm_password" id="c_password" class="form-control" required
                   maxlength="255">
        </div>
        <input type="submit" value="Register">
    </form>

{% endblock %}
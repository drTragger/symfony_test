{% extends 'base.html.twig' %}

{% block title %}Error{% endblock %}

{% block body %}
    <div class="vertical">
        <h2>Whoops! Looks like something went wrong</h2>
        <p>{{ message }}</p>
        {% if message starts with 'You need to log in' %}
            <a href="/">Log in</a>
        {% else %}
            <a href="{{ app.request.headers.get('referer') }}" class="btn btn-danger">Back</a>
        {% endif %}
    </div>
{% endblock %}